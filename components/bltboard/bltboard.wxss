/* components/bltboard/bltboard.wxss */
.announce_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: #07C160;
}
.announce_log{
  box-sizing: border-box;
  padding: 10rpx;
  height: 60rpx;
  width: 60rpx;
}
.announce_text_wrap{
  display: inline-block;
  width: 80%;
  align-content: center;
  justify-content: space-between;
  padding: 10rpx 25rpx;
  overflow: hidden;
}
.announce_text{
  height: 60rpx;
  line-height: 60rpx;
  width: 640rpx;
  color: white;
  white-space: nowrap;
  font-size: 34rpx;
}