/* pages/manager/manager.wxss */
.display_box {
  margin: 20rpx 10rpx 0 10rpx;
  max-height: 300rpx;
  background-color: rgba(255, 255, 255, 1);
  display: flex;
  border-radius: 10rpx;
  overflow: hidden;
  padding-bottom: 15rpx;
}

.title-box{
  margin: 10rpx 10rpx 0 10rpx;
  font-size: 36rpx;
}

.display_box .terminal-box {
  width: 50%;
  height: 100%;
  font-size: 34rpx;
}

.display_box .terminal-box text {
  margin-left: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.display_box .terminal-box:nth-child(1) {
  margin-right: 20rpx;
}

.display_item {
  box-sizing: border-box;
  padding: 0 4rpx;
  display: inline-block;
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  overflow: hidden;
}

.display_item text {
  display: inline-block;
  width: 100%;
  height: 100%;
  background-color: #19CAAD;
  color: #ffffff;
  border-radius: 15rpx;
  font-size: 32rpx;
}

.convoy {
  margin: 20rpx 10rpx 10rpx 10rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 600rpx;
  border-radius: 6px;
}

.convoy .convoyT1 {
  margin-right: 10rpx;
  /* margin-bottom: 10px; */
  width: 50%;
  height: 98.3%;
  background-color: rgba(255, 255, 255, 1);
  padding: 4px;
  border-radius: 6px;
  font-size: 34rpx;
}

.convoy .convoyT2 {
  margin-left: 10rpx;
  width: 50%;
  background-color: rgba(255, 255, 255, 1);
  height: 98.3%;
  padding: 4px;
  border-radius: 6px;
  font-size: 34rpx;
}

.convoy .convoyT1 text{
  margin-left: 10rpx;
}

.convoy .convoyT2 text{
  margin-left: 10rpx;
}

.select_box {
  width: 100%;
  margin: 20rpx auto;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border: 1px solid #efefef;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 32rpx;
  flex: 1;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(-90deg);
}

.option_box {
  z-index: 999;
  width: 100%;
  box-sizing: border-box;
  height: 0rpx;
  overflow-y: auto;
  border-top: 0;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 32rpx;
  margin: 0 20rpx;
  border-bottom: 1px solid #efefef;
  text-align: center;
  padding: 10rpx;
}