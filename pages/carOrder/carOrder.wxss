/* pages/carOrder/carOrder.wxss */
.title-box {
  position: relative;
  margin: 10rpx 10rpx 0 10rpx;
  font-size: 36rpx;
}

.title-box-switch{
  position: absolute;
  top: -2px;
  right: 0;
}

.display-box {
  height: 100%;
  margin: 20rpx 10rpx 10rpx 10rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 600rpx;
  border-radius: 6px;
}

.head-box{
  display: flex;
  justify-content: space-between;
}

.input-field{
  display: inline-block;
  width: 60%;
  padding: 0 12rpx;
  border: 1px solid #ccc; /* 设置边框颜色和样式 */
  border-radius: 4px;
}

.filterBtn {
  display: inline-block;
  width: 60rpx !important;
  height: 50rpx !important;
}

.filterImg{
  position: relative;
  top: -8px;
  right: 12px;
  width: 50rpx;
  height: 50rpx;
}

.T1pool{
  margin-right: 10rpx;
}

.T2pool{
  margin-left: 10rpx;
}

.T1pool,.T2pool {
  width: 100%;
  height: 98.8%;
  background-color: rgba(255, 255, 255, 1);
  padding: 4px;
  border-radius: 6px;
  font-size: 34rpx;
}

.item-box{
  display: flex;
  justify-content: space-between;
}

.order-item{
  display: inline-block;
  width: 20%;
  height: 30px;
  line-height: 30px;
  text-align: center;
}

.carNo-item{
  display: inline-block;
  width: 30%;
  height: 30px;
  line-height: 30px;
  font-size: 32rpx;
}

.time-item{
  display: inline-block;
  width: 50%;
  height: 30px;
  line-height: 30px;
  font-size: 32rpx;
}