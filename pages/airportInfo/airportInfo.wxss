/* pages/aiportInfo/airportInfo.wxss */
.progress_box {
  margin: 10rpx 0;
  width: 100%;
}

.progress {
  display: inline-block;
  width: 80%;
}

.progress_box text {
  margin-left: 20rpx;
}

.content_box {
  flex: auto;
  display: flex;
  flex-direction: column;
}

.dashboard_box {
  margin: 20rpx 10rpx;
  margin-bottom: 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: relative;
  display: flex;
  padding-top: 20rpx;
  height: 300rpx;
  flex-direction: row;
  justify-content: space-around;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rpx -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.dashboard_item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 40vw;
  height: 36vw;
}

.dashboard_count {
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background-color: rgba(255, 255, 255, 1);
  text-align: center;
}

.content_item_1 {
  flex: 3;
}

.channel_box {
  margin: 20rpx 10rpx 6rpx 10rpx;
  flex: 1;
  overflow: hidden;
}

.item_box {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
  overflow: hidden;
}

scroll-view {
  height: 100%;
}

.content_item {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  margin: 2% 0;
  height: 15%;
  padding: 4rpx 0;
  padding-left: 20rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.content_item:nth-child(1) {
  margin-top: 0;
  margin-bottom: 1%;
  padding: 4rpx 0;
  padding-left: 20rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.content_item:nth-last-child(1) {
  margin-top: 1%;
  margin-bottom: 0;
  padding: 4rpx 0;
  padding-left: 20rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.content_item .channel {
  font-size: 32rpx;
}

.content_item .number {
  font-size: 32rpx;
  position: relative;
  top: -4rpx;
  margin-left: 20rpx;
}

.progress-box{
  display: flex;
}

.progress {
  margin: 0 !important;
  padding: 0 !important;
}