/* pages/userInfo/userInfo.wxss */
.search_box {
  border-radius: 20rpx;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  margin: 20rpx 20rpx 0 20rpx;
  display: flex;
  flex-direction: row;
}

.search_box .search_ipt {
  height: 100rpx;
  flex: 1;
  padding-left: 10rpx;
  border: solid 2rpx rgba(128, 128, 128, 1);
  overflow: hidden;
  border-radius: 20rpx;
}

.search_box .search_icon {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 2rpx;
  right: 160rpx;
}

.search_icon image {
  position: relative;
  top: 21%;
  left: 21%;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
}

.search_box .search_btn {
  height: 104rpx;
  width: 150rpx;
  margin-left: 10rpx;
  background-color: rgb(248, 248, 248);
  border-radius: 20rpx;
}

.search_btn image {
  position: relative;
  top: 21%;
  left: 31%;
  opacity: 1;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
}

.driver-info-box {
  position: relative;
  margin: 20rpx 20rpx 0 20rpx;
  padding: 4px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 240rpx;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
}

.driver-info-box .detail-box {
  width: 70%;
}

.detail-box .carid {
  padding-top: 16rpx;
  height: 30%;
  width: 100%;
}

.detail-box .carid text:nth-child(1) {
  display: inline-block;
  width: 60px;
}

.detail-box .drivers {
  display: flex;
  justify-content: space-between;
  height: 70%;
  width: 100%;
}

.drivers view:nth-child(1) {
  width: 56px;
  height: 100%;
}

.drivers view:nth-child(2) {
  flex: 1;
  height: 100%;
}

.drivers .title {
  margin-right: 4px;
}

.drivers .title text {
  font-size: 16px;
}

.drivers .name text {
  font-size: 16px;
  text-align: right;
}

.driver-info-box .seal-box {
  position: relative;
  width: 30%;
}

.seal-box .seal-wrap {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 172rpx;
  height: 172rpx;
}

.seal-wrap .seal {
  width: 160rpx;
  height: 160rpx;
  border: solid 6rpx #CC0000;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  /* display: inline-block; */
  /* position: absolute;
  right: 10rpx;top: 22rpx; */
}

.seal .seal-son {
  width: 145rpx;
  height: 145rpx;
  border: solid 2rpx #CC0000;
  border-radius: 100%;
  background-color: rgba(255, 255, 255, 0.8);
  position: relative;
}

.taxi-info-box {
  flex: 1;
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 600rpx;
  border-radius: 6px;
}

.taxi-info-box scroll-view:nth-child(1) {
  margin-right: 10rpx;
  margin-bottom: 20px;
  width: 50%;
  height: 98%;
  background-color: rgba(255, 255, 255, 1);
  padding: 4px;
  border-radius: 6px;
}
.taxi-info-box scroll-view:nth-child(2) {
  margin-left: 10rpx;
  width: 50%;
  background-color: rgba(255, 255, 255, 1);
  height: 98%;
  padding: 4px;
  border-radius: 6px;
}

scroll-view .one {
  position: relative;
  padding-bottom: 40rpx;
}

.one .onedot {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  background-color: #67c23a;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

.one .oneline {
  position: absolute;
  left: 10rpx;
  height: 100%;
  border-left: 2px solid #e4e7ed;
}

.one .onemain {
  position: relative;
  padding-left: 56rpx;
  top: -6rpx;
}

.onemain .onemaintitle {
  margin-bottom: 16rpx;
  padding-top: 18rpx;
  color: #909399;
  line-height: 1;
  font-size: 26rpx;
}

.onemain .onemaincon {
  color: #303133;
}